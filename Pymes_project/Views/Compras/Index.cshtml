@model IEnumerable<Pymes_project.Models.Compras>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de compras</h2>
<style>
    .table {
        background-color: white;
        border-radius: 15px;
    }
</style>
<p>
    @Html.ActionLink("Nuevo registro", "Create", new { },
new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InventarioLenceria.nombreproducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venta.comentario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidadvendida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valorventa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InventarioLenceria.nombreproducto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Venta.comentario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidadvendida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valorventa)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.idventa },
            new { @class = "btn btn-success" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idventa },
            new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idventa },
            new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
