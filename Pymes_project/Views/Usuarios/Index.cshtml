@model IEnumerable<Pymes_project.ModeloVistas.VistaUsuarios>
@{ 
    ViewBag.Title = "Index";
}
<h2>Permisos de los Usuarios</h2>
<style>
    .table {
        background-color: white;
        border-radius: 15px;
    }
</style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Roles", "Roles", new { userId = item.UserID }, new
               { @class = "btn btn-primary" }) |
            </td>
        </tr>
    }
</table>
