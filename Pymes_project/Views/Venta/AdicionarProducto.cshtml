@model Pymes_project.ModeloVistas.InventarioLenceria
@{
    ViewBag.Title = "Adicionar Producto";
}
<h2>Adicionar Producto</h2>
<style>
    .form-horizontal {
        background-color: white;
        border-radius: 15px;
    }
</style>
<h3 style="color:red">@ViewBag.Error</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.codigo, htmlAttributes: new
           { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idcodigo", null, htmlAttributes: new
               { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idcodigo, "", new
               { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.cantidadvendida, htmlAttributes: new
           { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cantidadvendida, new
                {
                    htmlAttributes = new
               { @class = "form-control" }
                })
                @Html.ValidationMessageFor(model => model.cantidadvendida, "", new
               { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar Producto" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Volver", "NuevoPedido", new { }, new { @class = "btn btn-info" })
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
