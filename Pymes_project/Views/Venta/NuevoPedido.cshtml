@model Pymes_project.ModeloVistas.Pedido
@{
    ViewBag.Title = "Nuevo Pedido";
}
<h2>Nuevo Pedido</h2>
<style>
    .form-horizontal {
        background-color: white;
        border-radius: 15px;
    }
    .table {
        background-color: white;
        border-radius: 15px;
    }
</style>
<h3 style="color:red">@ViewBag.Error</h3>
<h3 style="color:red">@ViewBag.mensaje</h3>
@using (Html.BeginForm("NuevoPedido", "Venta", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Clientes.nropedido, htmlAttributes: new
           { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Clientes.nropedido, new
                {
                    htmlAttributes = new
               { @class = "form-control" }
                })
                @Html.ValidationMessageFor(model => model.Clientes.nropedido, "", new
               { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Clientes.empresa, htmlAttributes: new
           { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idnit", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Clientes.idnit, "", new
               { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Clientes.fechaventa, htmlAttributes: new
           { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Clientes.fechaventa, new
                {
                    htmlAttributes = new
               { @class = "form-control" }
                })
                @Html.ValidationMessageFor(model => model.Clientes.fechaventa, "", new
               { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Clientes.comentario, htmlAttributes: new
           { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Clientes.comentario, new
                {
                    htmlAttributes = new
               { @class = "form-control" }
                })
                @Html.ValidationMessageFor(model => model.Clientes.comentario, "", new
               { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Agregar Producto", "AdicionarProducto", new { }, new
               { @class = "btn btn-primary" })|
                <input type="submit" value="Generar Pedido" class="btn btn-success" />
            </div>
        </div>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulos.codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulos.nombreproducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulos.cantidadvendida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulos.valorunitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulos.totalventaproducto)
            </th>
            <th></th>
        </tr>
        @for (int i = 0; i < Model.Productos.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Productos[i].idcodigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Productos[i].nombreproducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Productos[i].cantidadvendida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Productos[i].valorunitario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Productos[i].totalventaproducto)
                </td>
                
            </tr>
        }
    </table>
}
<div>
    @Html.ActionLink("Volver", "../", new { }, new { @class = "btn btn-info" })
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}